<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LogisticsMobile.EquipmentInfoPage"
             Title="Информация">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit" Command="{Binding}" CommandParameter="{Binding}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="16" >
                <Label Text="IDEquipment"/>
                <Label Text="{Binding Equipment.IDEquipment}" TextColor="Black" FontSize="Medium"/>
                <Label Text="PositionState"/>
                <Picker ItemsSource="{Binding Positions}" SelectedItem="{Binding SelectedPosition}"/>
                <Label Text="HealthState"/>
                <Picker ItemsSource="{Binding Healths}" SelectedItem="{Binding SelectedHealth}"/>
                <Label Text="AssignedPosition"/>
                <Picker ItemsSource="{Binding AssignedPositions}" SelectedItem="{Binding SelectedAssignedPosition}"/>
                <Label Text="Description"/>
                <Editor Text="{Binding Equipment.Description}" />
                <Label Text="SerialNumber"/>
                <Entry Text="{Binding Equipment.SerialNumber}" />
                <Label Text="ISNumber"/>
                <Entry Text="{Binding Equipment.ISNumber}" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>