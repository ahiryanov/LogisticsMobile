<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LogisticsMobile.EquipmentInfoPage"
             Title="Информация">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="IDEquipment"/>
            <Label Text="{Binding Equipment.IDEquipment}"/>
            <Label Text="PositionState"/>
            <Picker ItemsSource="{Binding Positions}" InputTransparent="True" />
            <Label Text="HealthState"/>
            <Picker ItemsSource="{Binding Healths}" InputTransparent="True" />
            <Label Text="AssignedPosition"/>
            <Picker InputTransparent="True" />
            <Label Text="Description"/>
            <Editor Text="{Binding Equipment.Description}" />
            <Label Text="SerialNumber"/>
            <Entry Text="{Binding Equipment.SerialNumber}" />
            <Label Text="ISNumber"/>
            <Entry Text="{Binding Equipment.ISNumber}" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>