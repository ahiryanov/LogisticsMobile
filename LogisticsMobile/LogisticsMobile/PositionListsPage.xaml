<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LogisticsMobile.PositionListsPage">
    <StackLayout>
        <SearchBar Placeholder="Поиск" Text="{Binding SearchingText}" />
        <ListView ItemSelected="ListView_ItemSelected" SelectedItem="{Binding SelectedPosition}" ItemsSource="{Binding Positions}" IsPullToRefreshEnabled="True" IsRefreshing="{Binding IsBusy, Mode=OneWay}" RefreshCommand="{Binding RefreshCommand}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="16,12,16,12" >
                            <Label Text="{Binding}" FontSize="16" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>